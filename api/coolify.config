# Coolify Configuration for World ID Verification API
# This file contains Coolify-specific deployment settings

# Application Configuration
APP_NAME=world-id-verification-api
APP_DESCRIPTION=World ID Verification API for Red Light Green Light Game

# Deployment Settings
DEPLOYMENT_TYPE=docker-compose
BUILD_TYPE=buildpack

# Resource Limits
MEMORY_LIMIT=512M
CPU_LIMIT=0.5
DISK_LIMIT=1G

# Network Configuration
INTERNAL_PORT=3000
EXTERNAL_PORT=3000
DOMAIN_ENABLED=true
SSL_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_URL=http://localhost:3000/health
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Auto-deployment Settings
AUTO_DEPLOY_ENABLED=false
AUTO_DEPLOY_BRANCH=main
AUTO_DEPLOY_PR=false

# Environment Variables (will be set in Coolify UI)
# WORLD_ID_APP_ID=
# WORLD_ID_ACTION_ID=play-game
# RPC_URL=https://worldchain-mainnet.g.alchemy.com/public
# GAME_CONTRACT_ADDRESS=
# AUTHORIZED_SUBMITTER_PRIVATE_KEY=
# NODE_ENV=production
# PORT=3000
# CACHE_TTL_MINUTES=5
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
# LOG_LEVEL=info

# Docker Configuration
DOCKER_COMPOSE_FILE=docker-compose.yml
DOCKERFILE_PATH=Dockerfile

# Build Arguments
BUILD_ARGUMENTS=
BUILD_CONTEXT=.

# Runtime Configuration
RESTART_POLICY=unless-stopped
NETWORK_MODE=bridge

# Monitoring
METRICS_ENABLED=true
LOG_DRIVER=json-file
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3

# Security
SECURITY_CONTEXT=true
READ_ONLY_ROOT=false
NO_NEW_PRIVILEGES=true